{
  "manifest_version": 3,
  "name": "OpenWare - Web3 Security Suite",
  "version": "2.0.0",
  "description": "Multi-chain crypto security analyzer - Detect scams, phishing, and malicious contracts across all blockchains",
  "author": "@Snipeware",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-security.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenWare - Web3 Security Suite"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["warning-overlay.html", "images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}